  <tbody>
  <% @polls.each do |poll| %>
      <tr>
        <td><%= poll.owner.capitalize%></td>
        <td><%= link_to "#{poll.question.capitalize}", poll%></td>
      </tr>
  <% end %>
  </tbody>
</table>


