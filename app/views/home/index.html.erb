  <link href='http://fonts.googleapis.com/css?family=Pacifico|Signika:600' rel='stylesheet' type='text/css'>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<% content_for :polls_all do%>
    <table>
      <thead>
      <tr>
        <th>
          Owner
        </th>
        <th>
          Poll
        </th>
      </tr>
      </thead>

      <tbody>
      <% @polls.each do |poll| %>
          <tr>
            <td><%= poll.owner.capitalize%></td>
            <td><%= poll.question.capitalize%></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

<h1>Poll<span class="special">ish</span></h1>
<%= link_to 'Make your own!', new_poll_path, :class => "button [radius round]" %>
<%= yield :polls_all%>
