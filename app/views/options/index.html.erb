<h1>Listing options</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @options.each do |option| %>
      <tr>

        <td><%=option.answer %></td>
        <td><%= link_to 'Show',  poll_option_path(option.poll_id ,option)  %></td>
        <td><%= link_to 'Edit', edit_poll_option_path(option.poll_id, option) %></td>
        <td><%= link_to 'Destroy', edit_poll_option_path(option.poll_id, option), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Option', new_poll_option_path %>
